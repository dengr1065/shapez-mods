{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES6",
        "moduleResolution": "node",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "./src/**/*.js",
        "./types.d.ts",
        "./src/**/*.ts",
        "./lib/**/*.js",
        "./lib/**/*.ts"
    ],
    "exclude": ["./node_modules", "./build/**/*.mod.js", "./tools/*.js"]
}
